<h1>Hackathon2016 - application</h1>
<h2>The data which have been sent by iPhone application</h2>
<br />

<table class="data-list">
  <tr>
    <th><%= t ".created_at" %></th>
    <th><%= t ".updated_at" %></th>  
    <th><%= t ".heart_rate" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @reports.reverse_each do |report| %>
    <tr>
      <td><%= report.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      <td><%= report.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      <td><%= report.heart_rate %></td>
      <td><%= link_to 'edit', "/reports/#{report.id}/edit" %></td>
      <td><%= link_to 'show', report %></td>
      <td><%= link_to 'delete', report, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
